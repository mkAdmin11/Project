- name: roundcube - copy dump
  copy:
    src: "{{ item.src }}"
    dest: "{{ item.dest }}"
    owner: postgres
    group: postgres
  with_items:
    - { src: /share/roundcubemail-1.5.2/SQL/postgres.initial.sql, dest: /tmp/ }
    - { src: /share/roundcubemail-1.5.2/SQL/postgres/, dest: /tmp/postgres/ }
  when: ansible_hostname == server3.name|string

