  hosts:
    
    server1.novpn:
      ansible_host: "{{ server1.novpn_ip }}"
      ansible_user: "{{ server1.user }}"
      ansible_port: 22
      ansible_ssh_private_key_file: "~/.ssh/{{ server1.user }}"

    server2.novpn:
      ansible_host: "{{ server2.novpn_ip }}"
      ansible_user: "{{ server2.user }}"
      ansible_port: 22
      ansible_ssh_private_key_file: "~/.ssh/{{ server2.user }}"

    server3.novpn:
      ansible_host: "{{ server3.novpn_ip }}"
      ansible_user: "{{ server3.user }}"
      ansible_port: 22
      ansible_ssh_private_key_file: "~/.ssh/{{ server3.user }}"

    server1.vpn:
      ansible_host: "{{ server1.vpn_ip }}"
      ansible_user: "{{ server1.user }}"
      ansible_port: 22
      ansible_ssh_private_key_file: "~/.ssh/{{ server1.user }}"

    server2.vpn:
      ansible_host: "{{ server2.vpn_ip }}"
      ansible_user: "{{ server2.user }}"
      ansible_port: 22
      ansible_ssh_private_key_file: "~/.ssh/{{ server2.user }}"

    server3.vpn:
      ansible_host: "{{ server3.vpn_ip }}"
      ansible_user: "{{ server3.user }}"
      ansible_port: 22
      ansible_ssh_private_key_file: "~/.ssh/{{ server3.user }}"

  children:

    novpn:
      hosts:
        server1.novpn:
        server2.novpn:
        server3.novpn:

    vpn:
